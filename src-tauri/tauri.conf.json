{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "React CI",
  "version": "0.1.0",
  "identifier": "com.cicd-prototype.dev",
  "build": {
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "https://reactci-7fba94eb59ba.herokuapp.com/index.html"
  },
  "app": {
    "windows": [
      {
        "title": "React CI",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "autoIncrementVersionCode": true,
      "minSdkVersion": 24
    }
  }
}
